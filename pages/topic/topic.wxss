/* pages/topic/topic.wxss */
.header {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-around;
    box-sizing: border-box;
    width: 100%;
    height: 40px;
    background-color: #dddddd;
    position: fixed;
    z-index: 100;
}


.content {
    margin-top: 40px;
}

.topic {
    border-bottom:1px solid #333333;
}

.topic-info {
    height: 40px;
    width: 100%;
    display: flex;
    flex-direction: row;
    align-items: center;
}

.title {
    margin: 20px 3px 15px 10px; 
}

.review {
    height: 30px;
    display: flex;
    justify-content: flex-end;
    margin-right: 20px;
}
.author-avatar image{
    width: 30px;
    height: 30px;
}